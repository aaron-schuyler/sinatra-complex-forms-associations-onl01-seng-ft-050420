<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <input type="text" name="pet_name" value="<%= @pet.name %>">
  <% @owners.each do |owner| %>
    <label for="owner_id"><%= owner.name %></label><input type="radio" id="<%= owner.id %>" name="owner_id" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>>>
  <% end %>
  <label>Owner Name: </label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>
  <input type="hidden" name="_method" value="PATCH" id="hidden">
  <input type="submit" value="Update Pet">
</form>
